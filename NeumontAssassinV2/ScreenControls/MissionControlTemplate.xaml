<UserControl x:Class="NeumontAssassinV2.ScreenControls.MissionControlTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="600" Width="800">
    <Grid x:Name="MainGrid" Background="Black">
        <Grid.Resources>
            <Style TargetType="Button"
                   BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}">
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Focusable" Value="False"/>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Grid.Column" Value="0"/>
                <Setter Property="Grid.ColumnSpan" Value="3"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="Padding" Value="5,5,5,5"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />

        </Grid.RowDefinitions>
        <Image x:Name="TheBackground"
            Source="/Images/Front of Building.jpg"
            Grid.ColumnSpan="3"
            Grid.RowSpan="4"/>
        <Rectangle Fill="Gray"
                   Grid.ColumnSpan="3"
                   Grid.Row="1"
                   Grid.RowSpan="3"
                   Opacity="0.8"
                   RadiusX="10"
                   RadiusY="10"
                   Margin="5,5,11,5">
        </Rectangle>
        <Label x:Name="Label_SetUp"
               Grid.ColumnSpan="3"
               Grid.Column="0"
               Grid.Row="1"
               Foreground="White"
               FontSize="20"
               Content="Secretary: I'm saying the things."
               Padding="15,20,0,0"
               Visibility="Hidden"/>
        <Button x:Name="Button_Choice1"
               Grid.Row="1"
                Click="ButtonChoice1"
                MouseEnter="Button_Choice1_MouseEnter_1"
                MouseLeave="Button_Choice1_MouseEnter_1"
                Visibility="Visible"
                Content="skjdl"/>
        <Button x:Name="Button_Choice2"
               Grid.Row="2"
                Click="ButtonChoice2"
                MouseEnter="Button_Choice2_MouseEnter_1"
                MouseLeave="Button_Choice2_MouseEnter_1"
                Visibility="Visible"
                Content="slkdjfhslkjd"/>
        <Button x:Name="Button_Choice3"
               Grid.Row="3"
                Click="ButtonChoice3"
                MouseEnter="Button_Choice3_MouseEnter_1"
                MouseLeave="Button_Choice3_MouseEnter_1"
                Content="sdlkfhdsfkj"
                Visibility="Visible"/>

    </Grid>
</UserControl>
