<UserControl x:Class="NeumontAssassinV2.ScreenControls.PreQuestions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid x:Name="PreQuestionsGrid" Background="Black">
        <Grid.Resources>
            <Style TargetType="Label">
                <Setter Property="Grid.ColumnSpan" Value="3"/>
                <Setter Property="Grid.Column" Value="0"/>
                <Setter Property="Grid.Row" Value="1"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="Padding" Value="15,20,0,0"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Grid.Column" Value="0"/>
                <Setter Property="Grid.ColumnSpan" Value="3"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="Padding" Value="5,5,5,5"/>
                <Setter Property="FontStyle" Value="Normal"/>
                <Setter Property="Height" Value="30"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border CornerRadius="5,5,5,5" BorderThickness="1,1,1,1" RenderTransformOrigin="0.5,0.5" x:Name="border" BorderBrush="#FFFFFFFF">
                                <Border.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                        <SkewTransform AngleX="0" AngleY="0"/>
                                        <RotateTransform Angle="0"/>
                                        <TranslateTransform X="0" Y="0"/>
                                    </TransformGroup>
                                </Border.RenderTransform>
                                <Border Background="{TemplateBinding Background}" CornerRadius="5,5,5,5" x:Name="border1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="0.5*"/>
                                            <RowDefinition Height="0.5*"/>
                                        </Grid.RowDefinitions>
                                        <ContentPresenter VerticalAlignment="Center"  Grid.RowSpan="2" HorizontalAlignment="Left" x:Name="contentPresenter" Margin="5,0,0,0"/>
                                    </Grid>
                                </Border>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" TargetName="border1" Value="0.5"/>
                                    <Setter Property="Opacity" TargetName="border" Value="1"/>
                                    <Setter Property="Opacity" TargetName="contentPresenter" Value="0.5"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="RenderTransform" TargetName="border">
                                        <Setter.Value>
                                            <TransformGroup>
                                                <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                                                <SkewTransform AngleX="0" AngleY="0"/>
                                                <RotateTransform Angle="0"/>
                                                <TranslateTransform X="0" Y="0"/>
                                            </TransformGroup>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />

        </Grid.RowDefinitions>
        <Image x:Name="TheBackground"
            Source="/Images/Front of Building.jpg"
            Grid.ColumnSpan="3"
            Grid.RowSpan="4"/>
        <Rectangle Fill="Gray"
                   Grid.ColumnSpan="3"
                   Grid.Row="1"
                   Grid.RowSpan="3"
                   Opacity="0.8"
                   RadiusX="10"
                   RadiusY="10"
                   Margin="5,5,11,5">
        </Rectangle>
        <Label x:Name="Label_Choices"
               Content="Secretary: You need to infiltrate a building. How would you go about getting in?"
               Visibility="Visible"></Label>
        <Label x:Name="Label_SetUp"
               Content="Welcome To ISIS, here are a few questions we must ask every new employee."
               Visibility="Hidden"/>
        <Button x:Name="Button_Choice4"
                Grid.Row="2"
                VerticalAlignment="Top"
                Click="ButtonChoice4"
                MouseEnter="Button_Choice4_MouseEnter_1"
                MouseLeave="Button_Choice4_MouseEnter_1"
                Content="Lift the back access garage door and enter from behind."
                Visibility="Visible"
                Margin="10,5,15,0"/>
        <Button x:Name="Button_Choice1"
               Grid.Row="2"
                VerticalAlignment="Bottom"
                Click="ButtonChoice1"
                Content="Sneak past the guards and cameras."
                MouseEnter="Button_Choice1_MouseEnter_1"
                MouseLeave="Button_Choice1_MouseEnter_1"
                Visibility="Visible"
                Margin="10,0,15,5"/>
        <Button x:Name="Button_Choice2"
               Grid.Row="3"
                Click="ButtonChoice2"
                VerticalAlignment="Top"
                MouseEnter="Button_Choice2_MouseEnter_1"
                MouseLeave="Button_Choice2_MouseEnter_1"
                Visibility="Visible"
                Content="Intercept guard communications and wait for an opening to get in easily."
                Margin="10,0,15,0"/>
        <Button x:Name="Button_Choice3"
               Grid.Row="3"
                VerticalAlignment="Bottom"
                Click="ButtonChoice3"
                Content="Convince a guard you need access by saying you're a technical consultant."
                MouseEnter="Button_Choice3_MouseEnter_1"
                MouseLeave="Button_Choice3_MouseEnter_1"
                Visibility="Visible" Margin="10,0,15,10"/>
    </Grid>
</UserControl>
